<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/header"
        android:clickable="true">

    <!-- Content -->
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <!-- Header -->
        <View
                android:id="@+id/header"
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
                android:id="@+id/buttonMenu"
                android:layout_width="35dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/header"
                android:layout_marginStart="10dp"
                android:src="@drawable/icon_menu"/>

        <TextView
                android:id="@+id/titleHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/header"
                android:text="Home"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="@id/buttonNaviPen"
                app:layout_constraintStart_toStartOf="@id/buttonMenu"/>

        <ImageView
                android:id="@+id/buttonNaviPen"
                android:layout_width="35dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/header"
                android:layout_marginEnd="10dp"
                android:src="@drawable/navi_pen"/>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/header"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="vertical">

            <LinearLayout
                    android:padding="1dp"
                    android:id="@+id/optionHome"
                    app:layout_constraintTop_toBottomOf="@id/header"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/bg_list_option_home"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="horizontal"
                    android:weightSum="3">
                <TextView
                        android:id="@+id/createChat"
                        android:layout_width="0dp"
                        android:text="Create Chat"
                        android:background="@drawable/bg_option_selected_home_left"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                <View style="@style/VerticalSeperator"/>

                <TextView
                        android:id="@+id/listChat"
                        android:text="List Chat"
                        android:textColor="@color/header"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                <View style="@style/VerticalSeperator"/>

                <TextView
                        android:id="@+id/listCall"
                        android:text="List Call"
                        android:textColor="@color/header"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

            </LinearLayout>

            <FrameLayout
                    android:id="@+id/containerHome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"/>
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

    <!-- LeftLayout -->
    <android.support.design.widget.NavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@drawable/bg_menu_home"/>

            <ImageView
                    android:id="@+id/imageMenu"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toTopOf="@id/view"
                    app:layout_constraintBottom_toBottomOf="@id/view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/menu_icon"
                    android:scaleType="centerCrop"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fake Text"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textSize="25sp"
                    app:layout_constraintTop_toBottomOf="@id/imageMenu"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                    android:id="@+id/menu_home"
                    android:layout_marginTop="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/menu_home"
                    android:scaleType="centerCrop"
                    android:padding="10dp"
                    android:layout_marginStart="5dp"
                    app:layout_constraintTop_toBottomOf="@id/view"
                    app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="Home"
                    android:textColor="@color/header"
                    app:layout_constraintStart_toEndOf="@id/menu_home"
                    app:layout_constraintTop_toTopOf="@id/menu_home"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="21sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    app:layout_constraintBottom_toBottomOf="@id/menu_home"/>

            <ImageView
                    android:id="@+id/privacy_home"
                    android:layout_marginTop="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/menu_privacy"
                    android:scaleType="centerCrop"
                    android:padding="10dp"
                    android:layout_marginStart="5dp"
                    app:layout_constraintTop_toBottomOf="@id/menu_home"
                    app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="Privacy Policy"
                    android:textColor="@color/header"
                    app:layout_constraintStart_toEndOf="@id/privacy_home"
                    app:layout_constraintTop_toTopOf="@id/privacy_home"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="21sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    app:layout_constraintBottom_toBottomOf="@id/privacy_home"/>

            <ImageView
                    android:id="@+id/share_home"
                    android:layout_marginTop="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/menu_share"
                    android:scaleType="centerCrop"
                    android:padding="10dp"
                    android:layout_marginStart="5dp"
                    app:layout_constraintTop_toBottomOf="@id/privacy_home"
                    app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="Share"
                    android:textColor="@color/header"
                    app:layout_constraintStart_toEndOf="@id/share_home"
                    app:layout_constraintTop_toTopOf="@id/share_home"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="21sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    app:layout_constraintBottom_toBottomOf="@id/share_home"/>

            <ImageView
                    android:id="@+id/support_home"
                    android:layout_marginTop="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/menu_support"
                    android:scaleType="centerCrop"
                    android:padding="10dp"
                    android:layout_marginStart="5dp"
                    app:layout_constraintTop_toBottomOf="@id/share_home"
                    app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="Support"
                    android:textColor="@color/header"
                    app:layout_constraintStart_toEndOf="@id/support_home"
                    app:layout_constraintTop_toTopOf="@id/support_home"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="21sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    app:layout_constraintBottom_toBottomOf="@id/support_home"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>