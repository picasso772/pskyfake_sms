<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingBottom="10dp"
            android:background="#283245">
        <ImageView
                android:id="@+id/buttonBack"
                android:padding="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/line_arrow_left"/>

        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chats"
                app:layout_constraintTop_toTopOf="@id/buttonBack"
                app:layout_constraintBottom_toBottomOf="@id/buttonBack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        <ImageView
                android:id="@+id/arrow_down"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/line_arrow_down"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintStart_toStartOf="@id/title"
                app:layout_constraintEnd_toEndOf="@id/title"/>

        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/line_create"
                android:padding="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"/>

        <LinearLayout
                android:id="@+id/layoutSearch"
                app:layout_constraintTop_toBottomOf="@id/arrow_down"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:background="@drawable/bg_line_search"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/line_search"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#C9C8C8"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerMessages"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/top"
            app:layout_constraintBottom_toTopOf="@id/footer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toTopOf="@id/footer"
            android:background="#C6C6C6"/>
    <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:paddingTop="5dp"
            android:paddingBottom="2dp"
            android:background="#FAFAFA"
            app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
            <ImageView
                    android:padding="4dp"
                    android:src="@drawable/line_avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#A2A0A0"
                    android:layout_height="wrap_content"
                    android:text="Friends"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
            <ImageView
                    android:padding="4dp"
                    android:src="@drawable/line_bubble"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Chats"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
            <ImageView
                    android:padding="4dp"
                    android:src="@drawable/line_clock"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#A2A0A0"
                    android:layout_height="wrap_content"
                    android:text="Timeline"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
            <ImageView
                    android:padding="4dp"
                    android:src="@drawable/line_phone"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#A2A0A0"
                    android:layout_height="wrap_content"
                    android:text="Calls"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
            <ImageView
                    android:padding="4dp"
                    android:src="@drawable/line_more"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#A2A0A0"
                    android:layout_height="wrap_content"
                    android:text="More"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>