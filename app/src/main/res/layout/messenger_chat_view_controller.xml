<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="#F0EFF7">

    <!-- Layout -->
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/customBlue">

            <ImageView
                    android:id="@+id/buttonBack"
                    android:padding="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/line_arrow_left"/>

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/logoUser"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="3dp"
                    android:src="@drawable/home_avatar"
                    app:layout_constraintStart_toEndOf="@id/buttonBack"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="15dp"/>

            <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="quanganh"
                    app:layout_constraintTop_toTopOf="@id/logoUser"
                    android:layout_marginStart="13dp"
                    app:layout_constraintStart_toEndOf="@id/logoUser"
                    app:layout_constraintEnd_toStartOf="@id/phone"
                    app:layout_constraintHorizontal_bias="0"
                    android:layout_marginEnd="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

            <TextView
                    app:layout_constraintTop_toBottomOf="@id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Messenger"
                    android:layout_marginStart="13dp"
                    app:layout_constraintStart_toEndOf="@id/logoUser"
                    android:textColor="@color/white"/>

            <ImageView
                    android:id="@+id/phone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="2dp"
                    android:src="@drawable/messenger_phone"
                    app:layout_constraintEnd_toStartOf="@id/camera"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="15dp"/>

            <ImageView
                    android:id="@+id/camera"
                    android:layout_width="30dp"
                    android:padding="2dp"
                    android:layout_height="30dp"
                    android:src="@drawable/messenger_camera_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="10dp"/>

        </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerMessages"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/top"
                app:layout_constraintBottom_toTopOf="@id/footer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintBottom_toTopOf="@id/footer"
                android:background="#C6C6C6"/>

        <android.support.constraint.ConstraintLayout
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                    android:id="@+id/plus"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/messenger_plus_two"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"/>

            <ImageView
                    android:id="@+id/camera_two"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="2dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/messenger_camera_gray"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/plus"/>

            <ImageView
                    android:id="@+id/library"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="2dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/messenger_image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/camera_two"/>

            <ImageView
                    android:id="@+id/sound"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="2dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/messenger_sound"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/library"/>

            <View
                    android:id="@+id/view_text"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toEndOf="@id/sound"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/bg_messenger_edit_text"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="Aa"
                    app:layout_constraintStart_toStartOf="@id/view_text"
                    android:layout_marginStart="13dp"/>

            <ImageView
                    android:id="@+id/smile"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="2dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/messenger_face_smile"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/view_text"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>


    <!-- Rate App -->
    <android.support.constraint.ConstraintLayout
            android:id="@+id/layoutRate"
            android:layout_width="match_parent"
            android:background="#80000000"
            android:layout_height="match_parent"
            android:visibility="gone">

        <LinearLayout
                android:background="@drawable/bg_layout_rate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:orientation="vertical">
            <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_rate"
                    android:paddingTop="8dp"
                    android:paddingLeft="20dp"
                    android:paddingBottom="8dp"
                    android:textSize="20sp"
                    android:fontFamily="cursive"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

            <View style="@style/HorizotalSeperator"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:weightSum="5">
                <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_height="50dp"
                        android:src="@drawable/rate_start"/>
                <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_height="50dp"
                        android:src="@drawable/rate_start"/>
                <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_height="50dp"
                        android:src="@drawable/rate_start"/>
                <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_height="50dp"
                        android:src="@drawable/rate_start"/>
                <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_height="50dp"
                        android:src="@drawable/rate_start"/>

            </LinearLayout>

            <View style="@style/HorizotalSeperator"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/tvLater"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="30dp"
                        android:text="@string/rate_later"
                        android:textColor="@color/customBlue"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_reate"/>

                <TextView
                        android:id="@+id/tvRateNow"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="30dp"
                        android:text="@string/rate_now"
                        android:textSize="@dimen/text_reate"
                        android:layout_marginEnd="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/customBlue"/>

                <TextView
                        android:gravity="center"
                        android:id="@+id/tvNo"
                        android:layout_width="0dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:text="@string/rate_no"
                        android:textSize="@dimen/text_reate"
                        android:textStyle="bold"
                        android:textColor="@color/customBlue"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>