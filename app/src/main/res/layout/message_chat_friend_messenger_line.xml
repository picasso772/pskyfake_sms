<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logoFriends"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"/>

    <TextView
            android:id="@+id/nameUser"

            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/logoFriends"
            app:layout_constraintTop_toTopOf="parent"
            android:text="quanganh"
            android:textColor="@color/white"/>

    <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/messageFriend"
            android:layout_width="wrap_content"
            android:maxWidth="300dp"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_message_friend_send_line"
            android:textColor="@color/black"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="15dp"
            android:textSize="19sp"
            android:gravity="center_vertical|left"
            android:text="Friend send"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/nameUser"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/logoFriends"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/timeMessages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/messageFriend"
            app:layout_constraintStart_toEndOf="@id/messageFriend"
            android:textColor="@color/white"
            android:layout_marginStart="5dp"
            android:text="15/05/19"/>

</android.support.constraint.ConstraintLayout>