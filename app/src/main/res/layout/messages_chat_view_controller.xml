<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <!-- Header -->
    <View
            android:layout_marginTop="2dp"
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/textNameUser"/>

    <ImageView
            android:id="@+id/imageBack"
            android:layout_width="40dp"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="@id/header"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="8dp"
            android:src="@drawable/navi_back_black"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageLogoUser"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@id/header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/home_avatar"/>

    <TextView
            android:id="@+id/textNameUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imageLogoUser"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="quang anh  >"
            android:paddingBottom="5dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/header"
            android:textColor="@color/black"/>

    <!-- Content -->
    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewMessage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintBottom_toTopOf="@id/editTextMessage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Footer -->
    <ImageView
            android:id="@+id/imageCamera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp"
            android:src="@drawable/navi_camera"
            android:scaleType="centerCrop"/>

    <TextView
            android:id="@+id/editTextMessage"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:hint="Send message..."
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:paddingRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageCamera"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_edittext_messages"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageSend"
            android:layout_width="30dp" android:layout_height="30dp"
            android:src="@drawable/message_send"
            app:layout_constraintBottom_toBottomOf="@id/editTextMessage"
            app:layout_constraintTop_toTopOf="@id/editTextMessage"
            app:layout_constraintEnd_toEndOf="@id/editTextMessage"
            android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>