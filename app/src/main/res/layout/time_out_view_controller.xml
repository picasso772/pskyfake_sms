<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#807A7A7A"
        android:gravity="center"
        android:clickable="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_view_notification">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delay"
                android:textColor="@color/customBlue"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="10dp"
                android:gravity="center"/>

        <TextView
                android:id="@+id/tvMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fake Text"
                android:textColor="@color/customBlue"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:gravity="center"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_time_out_view">

            <TextView
                    android:id="@+id/buttonCancel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>

            <View style="@style/VerticalSeperator"
                  android:background="@color/white"/>

            <TextView
                    android:id="@+id/buttonCall"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingBottom="10dp"
                    android:layout_height="wrap_content"
                    android:text="Call (00:00:02)"
                    android:paddingTop="10dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>